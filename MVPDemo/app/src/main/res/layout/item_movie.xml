<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_movie"
            android:layout_width="@dimen/movie_pic_width"
            android:layout_height="@dimen/movie_pic_height" />

        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_movie"
            android:layout_alignLeft="@id/image_movie"
            android:maxEms="5"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="电影名称"
            android:textSize="@dimen/movie_name"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>